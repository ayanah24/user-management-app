<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
  <table >
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Username</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% for (let user of users) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>

        <!-- Edit Button -->
        <td>
          <form method="GET" action="/user/<%= user.id %>/edit">
            <button>Edit Username</button>
          </form>
        </td>

        <!-- Delete Button (leads to password confirm form) -->
        <td>
          <form method="GET" action="/user/<%= user.id %>/delete">
            <button>Delete</button>
          </form>
        </td>
      </tr>
    <% } %>
  </table>
</body>

</html>